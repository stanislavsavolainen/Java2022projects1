<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name = "ProductModel1" table = "java_hibernate_demo1_product">
      
      <meta attribute = "class-description">
         This class contains the product detail. 
      </meta>
      
        
      <id name = "id" type = "int" column = "id">
         <generator class="native"/>
      </id>
      
      
      <property name = "uuid" column = "product_uuid" type = "string"/>
      <property name = "name" column = "product_name" type = "string"/>
      <property name = "price" column = "product_price" type = "double"/>
      <property name = "description" column = "product_description" type = "string"/>
     
      
   </class>
</hibernate-mapping>